<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/happyrabbit_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sadRabbit"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@mipmap/sad_final_low" />

    <TextView
        android:id="@+id/notificationText"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="You've been working hard for a while, and now you can feed your bunny a carrot."
        android:textColor="#FF8600"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        tools:textSize="20sp" />

    <ImageButton
        android:id="@+id/carrotButton"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:background="#FFD9AD"
        app:srcCompat="@mipmap/imagecarrot_final_low" />

    <TextView
        android:id="@+id/hintClick2"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:text="Click me!"
        android:textColor="#FF8600"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="158dp"
        android:layout_height="85dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:background="#FF8600"
        android:text="BAck"
        android:textColor="#FFD9AD"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>
